<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >

    <TextView
        android:id="@+id/author1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="14dp"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="26sp"
        android:textColor="@color/text" />
    
    <TextView
        android:id="@+id/author2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textSize="22sp"
        android:textColor="@color/text" />
    
    <TextView
        android:id="@+id/top1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="14dp"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="26sp"
        android:textColor="@color/text" />
  
    <TextView
        android:id="@+id/top2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textSize="22sp"
        android:textColor="@color/text" />
    
    <TextView
        android:id="@+id/bottom1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="14dp"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="26sp"
        android:textColor="@color/text" />
    
    <TextView
        android:id="@+id/bottom2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textSize="22sp"
        android:textColor="@color/text" />
    <TextView
        android:id="@+id/kimariji1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="14dp"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="26sp"
        android:textColor="@color/text" />
    
    <TextView
        android:id="@+id/kimariji2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textSize="22sp"
        android:textColor="@color/text" />
    
    <TextView
        android:id="@+id/translation1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="14dp"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="26sp"
        android:textColor="@color/text" />
    
    <TextView
        android:id="@+id/translation2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="0dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textSize="22sp"
        android:textColor="@color/text" />

  </LinearLayout>
    
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10dp"
      android:gravity="center" >

    <CheckBox
        android:id="@+id/learnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="100dp"
        android:textSize="20sp"
        android:text="@string/learnComplete" />
    
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back" />

  </LinearLayout>
</LinearLayout>